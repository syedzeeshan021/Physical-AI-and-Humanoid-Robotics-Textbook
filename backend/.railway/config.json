{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "gcc", "g++", "cmake", "nodejs-18_x"]
        },
        "install": {
          "cmd": "pip install -r requirements.txt"
        },
        "build": {
          "cmd": "echo 'No build required'"
        },
        "start": {
          "cmd": "gunicorn gunicorn.conf:app"
        }
      },
      "variables": {
        "PYTHONPATH": "/app",
        "PORT": "8000"
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "startDelay": 0,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}